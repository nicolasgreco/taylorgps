{
  "name": "TG-itinerary",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:server": "tsc -w -p ./src/server & nodemon --delay 5 build/server/bin/www.js",
    "dev:client": "ng serve --disable-host-check --open --serve-path / --proxy-config proxy.conf.json",
    "build": "npm-run-all -p build:*",
    "build:server": "tsc -p ./src/server",
    "build:client": "for lang in es pt; do ng build --prod --build-optimizer --progress=false --stats-json --output-path=build/dist/$lang --aot --i18n-file=src/client/locale/messages.$lang.xlf --i18n-format=xlf --locale=$lang; done",
    "i18n": "ng xi18n --output-path src/client/locale",
    "e2e": "ng e2e",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:ts": "ng lint",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "format:fix": "prettier --write",
    "format:write": "prettier --write \"**/*{.ts,.js,.json,.css,.scss}\"",
    "format:check": "prettier --list-different \"**/*{.ts,.js,.json,.css,.scss}\"",
    "commitmsg": "commitlint -e",
    "precommit": "lint-staged",
    "bundle-report": "webpack-bundle-analyzer build/dist/stats.json",
    "compodoc": "./node_modules/.bin/compodoc -p src/client/tsconfig.app.json"
  },
  "lint-staged": {
    "*.{js,json}": [
      "npm run format:fix",
      "git add"
    ],
    "*.ts": [
      "npm run format:fix",
      "npm run lint:ts -- --fix",
      "git add"
    ],
    "*.{scss,css}": [
      "npm run format:fix",
      "npm run lint:styles -- --fix",
      "git add"
    ]
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/client/setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/client/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.4",
    "@angular/cdk": "^5.2.4",
    "@angular/cli": "1.6.7",
    "@angular/common": "^5.2.0",
